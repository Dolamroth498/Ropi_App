<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/emailCim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:autofillHints=""
        android:ems="12"
        android:textSize="32sp"
        android:hint="@string/email_cim"
        android:inputType="textEmailAddress"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:autofillHints=""
        android:ems="12"
        android:textSize="32sp"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/emailCim"
        />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:layout_marginTop="50dp"
        android:layout_marginStart="150dp"
        android:onClick="login"
        android:text="@string/login"
        android:textSize="32sp"
        tools:ignore="UsingOnClickInXml" />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/loginButton"
        android:layout_below="@id/password"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="100dp"
        android:onClick="register"
        android:text="@string/register"
        android:textSize="32sp"
        tools:ignore="RtlHardcoded,UsingOnClickInXml" />

    <Button
        android:id="@+id/guestLoginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/googleLoginButton"
        android:layout_marginTop="50dp"
        android:layout_marginStart="375dp"
        android:onClick="guestLogin"
        android:text="@string/guest"
        android:textSize="32sp"
        tools:ignore="UsingOnClickInXml" />

    <Button
        android:id="@+id/googleLoginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginButton"
        android:layout_marginTop="50dp"
        android:layout_marginStart="300dp"
        android:onClick="googleLogin"
        android:text="@string/google"
        android:textSize="32sp"
        tools:ignore="UsingOnClickInXml" />


</RelativeLayout>